<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal">

    <TextView
        android:id="@+id/idCommenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Commenter"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10sp"
        android:text="10/9/2017"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/IdComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idCommenter"
        android:padding="10dp"
        android:text="Avi is hardcore Android programmer and Android programming has been his passion since he compiled his first hello-world program."
        android:textColor="@color/cardview_dark_background"
        android:textSize="14sp" />
</RelativeLayout>